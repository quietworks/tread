{
	"name": "tread",
	"version": "0.3.0",
	"description": "A fast, keyboard-driven TUI RSS reader",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "bun run src/index.ts",
		"dev": "bun --watch run src/index.ts",
		"format": "biome format --write .",
		"format:check": "biome format ."
	},
	"dependencies": {
		"@opentui/core": "^0.1.50",
		"smol-toml": "^1.3.1",
		"fast-xml-parser": "^4.5.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/bun": "latest",
		"@types/node": "^22.10.0",
		"typescript": "^5.7.2"
	}
}
