{
	"name": "tread",
	"version": "0.5.0",
	"description": "A fast, keyboard-driven TUI RSS reader",
	"keywords": [
		"rss",
		"atom",
		"feed",
		"reader",
		"tui",
		"terminal",
		"cli",
		"keyboard"
	],
	"author": "Quiet Works",
	"license": "MIT",
	"homepage": "https://github.com/quietworks/tread#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/quietworks/tread.git"
	},
	"bugs": {
		"url": "https://github.com/quietworks/tread/issues"
	},
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "bun run src/index.ts",
		"dev": "bun --watch run src/index.ts",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage"
	},
	"dependencies": {
		"@opentui/core": "^0.1.50",
		"@opentui/solid": "^0.1.50",
		"@types/turndown": "^5.0.6",
		"fast-xml-parser": "^5.3.2",
		"smol-toml": "^1.3.1",
		"solid-js": "^1.9.10",
		"turndown": "^7.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/bun": "latest",
		"typescript": "^5.7.2"
	}
}
